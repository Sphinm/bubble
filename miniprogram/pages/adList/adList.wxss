.reward {
  min-height: 100vh;
  box-sizing: border-box;
  padding-top: 30rpx;
  display: flex;
  flex-direction: column;
}

.taskBox {
  display: flex;
  padding: 0;
  background: #fff;
  text-align: left;
}

.taskBox .taskImg {
  width: 130rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0;
}

.taskBox .taskImg image {
  width: 46rpx;
  height: 46rpx;
}

.taskBox .content {
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
  flex: 1;
  display: flex;
  height: 160rpx;
  padding-right: 30rpx;
}

.content .left {
  width: 440rpx;
  padding-top: 36rpx;
}

.taskBox .taskName {
  text-align: left;
  font-size: 30rpx;
  color: #404040;
  line-height: 40rpx;
}

.taskBox .taskName view {
  display: inline-block;
  overflow: hidden;
}

.taskBox .taskName .title {
  color: #404040;
  font-size: 30rpx;
  font-weight: bold;
}

.taskBox .taskNameReward {
  padding: 0 13rpx;
  height: 32rpx;
  background: rgba(254, 107, 79, 0.2);
  color: #fe6b4f;
  border-radius: 6rpx;
  font-size: 24rpx;
  line-height: 32rpx;
  margin-left: 10rpx;
}

.taskBox .taskNameReward2 {
  color: #1295f5;
  background: rgba(18, 149, 245, 0.2);
}

.taskBox .taskDesc {
  font-size: 26rpx;
  color: #868686;
  line-height: 30rpx;
  padding-top: 10rpx;
}

.content .right {
  width: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.taskBox .taskReward {
  width: 150rpx;
  height: 60rpx;
  background: linear-gradient(90deg, rgba(254, 107, 79, 1), rgba(254, 148, 83, 1));
  border-radius: 30rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #fff;
  text-align: center;
  font-weight: 400rpx;
  padding: 0;
}

.taskReward button {
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #fff;
  text-align: center;
  font-weight: 400rpx;
  padding: 0;
}