.container {
  background: #f8f8f8;
  width: 100%;
  height: auto;
}
.container .top_info {
  position: relative;
  width: 100%;
}
.container .top_info .top_bg_bg {
  position: absolute;
  width: 100%;
  height: 300rpx;
}
.container .top_info .my_info {
  display: flex;
  height: 300rpx !important;
  position: relative;
  align-items: center;
}
.container .top_info .my_info .headBox {
  width: 119rpx;
  height: 119rpx;
  border-radius: 50%;
  margin-left: 60rpx;
  overflow: hidden;
}
.container .top_info .my_info .userName {
  font-size: 32rpx;
  font-weight: bold;
  color: #3c3c3c;
  line-height: 50rpx;
  height: 50rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  padding-left: 24rpx;
}
