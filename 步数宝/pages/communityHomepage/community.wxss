::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.community {
    height: auto;
}

.refresh-tip {
    margin-bottom: 10rpx;
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;
    background: rgba(120,97,255,0.3);
    font-size: 30rpx;
    color: #7861ff;
}

.communityTop {
    position: relative;
    width: 750rpx;
    height: 102rpx;
    background: #fff;
}

.communityTitle {
    width: 720rpx;
    height: 56rpx;
    padding: 23rpx 0 23rpx 30rpx;
    background: #fff;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 999;
}

.communityTitle.fixed {
    position: fixed;
}

.communityTitle .tj {
    width: 340rpx;
    vertical-align: bottom;
    display: inline-block;
    position: relative;
}

.communityTitle .tj .txt {
    display: inline-block;
    font-size: 30rpx;
    padding: 0 20rpx;
    text-align: left;
    position: relative;
    z-index: 5;
    transition: all 0.5s;
}

.communityTitle .tj .txt.activity {
    transform-origin: 50% 100% 0;
    transform: scale(1.7);
    font-weight: bold;
    padding: 0 30rpx;
    z-index: 4;
}

.communityTitle .tj .b-line {
    position: absolute;
    left: 48rpx;
    bottom: -10rpx;
    width: 26rpx;
    height: 8rpx;
    background: linear-gradient(90deg,rgba(118,94,254,1),rgba(182,108,224,1));
    border-radius: 4rpx;
    transition: all 0.5s;
}

.communityTitle .tj .b-line.activity {
    left: 144rpx;
}

.communityTitle .tj .b-line.hot {
    left: 242rpx;
}

.communityTitle .fb {
    float: right;
    padding: 0 25rpx;
    height: 56rpx;
    line-height: 56rpx;
    font-size: 28rpx;
    margin-right: 30rpx;
    background: rgba(129,112,249,0.1);
    border-radius: 28rpx;
    display: flex;
    align-items: center;
}

.communityTitle .fb image {
    width: 27rpx;
    height: 27rpx;
}

.communityTitle .fb text {
    font-weight: bold;
    font-size: 28rpx;
    color: #8170f9;
    line-height: 56rpx;
    padding-left: 14rpx;
}

.unread {
    width: 12rpx;
    height: 12rpx;
    background: #FF0000;
    border-radius: 50%;
    position: absolute;
    right: 11rpx;
    top: 10rpx;
}

page {
    height: auto;
    min-height: 100%;
    background: #f8f8f8;
}

.msg-box {
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
}

.msg-content {
    width: 236rpx;
    height: 68rpx;
    background: linear-gradient(90deg,rgba(118,94,254,1),rgba(182,108,224,1));
    border-radius: 10rpx;
    text-align: center;
    line-height: 1;
    display: none;
}

.msg-box.showMsg {
    height: 80rpx;
}

.msg-box.showMsg .msg-content {
    display: block;
}

.msg-content .txt {
    color: #fff;
    font-size: 28rpx;
    padding-right: 15rpx;
    display: inline-block;
    vertical-align: middle;
    line-height: 68rpx;
}

.msg-content .img {
    display: inline-block;
    position: relative;
    font-size: 0;
    width: 20rpx;
    height: 20rpx;
    vertical-align: middle;
}

.msg-content .img image {
    width: 100%;
    height: 100%;
}

.msg-content .img .redDot {
    width: 10rpx;
    height: 10rpx;
    border-radius: 5rpx;
    background: #ff2900;
    position: absolute;
    top: -7rpx;
    right: -2rpx;
}

.swiper {
    background: #FFF;
    width: 690rpx;
    height: 200rpx;
    padding: 0 30rpx;
    display: flex;
}

.slide-image {
    width: 690rpx;
    height: 200rpx;
    background: #fff;
}

.imageadv {
    width: 690rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.topic-box {
    background: #fff;
    margin-bottom: 20rpx;
    padding-left: 30rpx;
    width: 720rpx;
}

.topic-box .title {
    height: 100rpx;
    padding-right: 26rpx;
    font-size: 30rpx;
    color: #404040;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.topic-box .title .link-more {
    display: flex;
    align-items: center;
}

.topic-box .title .link-more text {
    color: #868686;
    font-size: 22rpx;
    padding-right: 10rpx;
    display: block;
}

.topic-box .title .link-more image {
    display: block;
    width: 20rpx;
    height: 20rpx;
}

.topicList {
    width: 100%;
    padding-bottom: 20rpx;
    height: 160rpx;
    white-space: nowrap;
}

.topicList .topic {
    display: inline-block;
    width: 320rpx;
    height: 160rpx;
    padding-right: 20rpx;
    vertical-align: top;
    position: relative;
}

.topicList .topic:last-child {
    padding-right: 30rpx;
}

.topicList .topic .topic-content {
    width: 320rpx;
    height: 160rpx;
    display: flex;
    position: relative;
    z-index: 5;
    justify-content: center;
    align-items: center;
    background: rgba(0,0,0,0.3);
    border-radius: 10rpx;
}

.topicList .topic image {
    position: absolute;
    left: 0;
    top: 0;
    width: 320rpx;
    height: 160rpx;
    border-radius: 10rpx;
}

.topicList .topic text {
    display: block;
    font-size: 30rpx;
    color: #fff;
    line-height: 40rpx;
    text-align: center;
    width: 230rpx;
    font-weight: bold;
    word-break: break-all;
    word-wrap: break-word;
    white-space: normal;
}

.read-tip {
    display: flex;
    height: 60rpx;
    width: 100%;
    background: #f8f8f8;
    justify-content: center;
    align-items: center;
    margin-bottom: 20rpx;
}

.read-tip text {
    font-size: 30rpx;
    color: #8170f9;
    padding-right: 12rpx;
    display: block;
    line-height: 60rpx;
}

.read-tip image {
    display: block;
    width: 30rpx;
    height: 25rpx;
}

.info-box {
    margin-bottom: 20rpx;
    background: #fff;
}

.info-box .content {
    padding: 30rpx 30rpx 0;
    display: flex;
}

.info-box .content .left {
    padding-right: 20rpx;
    width: 100rpx;
    font-size: 0;
}

.info-box .content .left image {
    width: 100rpx;
    height: 100rpx;
    display: block;
    border-radius: 50%;
}

.info-box .content .right {
    flex: 1;
    font-size: 0;
}

.info-box .content .right .name-box {
    position: relative;
    padding-right: 120rpx;
    padding-bottom: 16rpx;
    display: flex;
    align-items: center;
}

.info-box .content .right .name-box .name {
    display: block;
    padding-right: 14rpx;
    line-height: 44rpx;
    color: #868686;
    font-size: 30rpx;
    max-width: 350rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.info-box .content .right .name-box .isTop {
    width: 60rpx;
    height: 30rpx;
    position: relative;
    background: linear-gradient(90deg,rgba(254,107,79,1),rgba(254,148,83,1));
    border-radius: 10rpx;
}

.info-box .content .right .name-box .isTop .txt {
    width: 56rpx;
    height: 26rpx;
    position: absolute;
    left: 2rpx;
    top: 2rpx;
    border-radius: 8rpx;
    background: #fff;
    line-height: 26rpx;
    text-align: center;
    font-size: 20rpx;
    color: #fe6b4f;
}

.info-box .content .right .name-box .icon_official {
    width: 69rpx;
    height: 32rpx;
}

.info-box .content .right .follow {
    width: 100rpx;
    height: 44rpx;
    box-sizing: border-box;
    line-height: 40rpx;
    text-align: center;
    font-size: 24rpx;
    color: #fe6b4f;
    position: absolute;
    top: 0;
    right: 0;
    border: 2rpx solid #fe6b4f;
    border-radius: 22rpx;
}

.hide {
    display: block;
}

@-webkit-keyframes fadenum {
    0% {
        opacity: 1;
    }

    50% {
        opacity: 0.5;
    }

    100% {
        opacity: 0;
    }
}

@keyframes fadenum {
    0% {
        opacity: 1;
    }

    50% {
        opacity: 0.5;
    }

    100% {
        opacity: 0;
    }
}

.show {
    display: none;
}

.release {
    position: fixed;
    width: 134rpx;
    height: 134rpx;
    bottom: 180rpx;
    right: 18rpx;
    z-index: 99;
}

.release image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.videoTask {
    position: fixed;
    width: 96rpx;
    height: 120rpx;
    bottom: 312rpx;
    right: 20rpx;
    z-index: 99;
}

.videoTask .rob {
    position: absolute;
    left: 6rpx;
    top: 0;
    width: 84rpx;
    height: 82rpx;
    animation: shake 0.8s linear infinite;
    transform: scale(1);
    z-index: 3;
}

@-webkit-keyframes shake {
    0% {
        transform: scale(1);
    }

    50% {
        transform: scale(0.7);
    }

    100% {
        transform: scale(1);
    }
}

@keyframes shake {
    0% {
        transform: scale(1);
    }

    50% {
        transform: scale(0.7);
    }

    100% {
        transform: scale(1);
    }
}

.videoTask .box {
    position: relative;
    width: 96rpx;
    height: 120rpx;
}

.nocontent {
    padding-top: 224rpx;
    width: 100%;
    position: relative;
    background: rgba(248,248,248,1);
}

.nothing {
    width: 504rpx;
    height: 342rpx;
    display: block;
    margin: 0 auto;
}

.nocontent .txt {
    width: 100%;
    text-align: center;
    height: 28rpx;
    line-height: 28rpx;
    font-size: 28rpx;
    color: #adacb0;
    display: block;
}

.hot-box {
    width: 100%;
}

.hot-box .video-content {
    position: relative;
}

.hot-box .video-content .video-img {
    width: 100%;
    height: 420rpx;
    display: block;
}

.hot-box .video-content .video-img.vertical {
    filter: blur(18rpx);
}

.hot-box .video-content .video-mask {
    width: 100%;
    height: 420rpx;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 3;
}

.hot-box .video-content .video-vertical {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 420rpx;
    z-index: 4;
    display: flex;
    justify-content: center;
}

.hot-box .video-content .video-vertical image {
    width: 314rpx;
    height: 420rpx;
}

.hot-box .video-content .video-title {
    position: absolute;
    left: 0;
    top: 0;
    width: 690rpx;
    padding: 22rpx 30rpx 0;
    font-size: 36rpx;
    text-align: justify;
    line-height: 46rpx;
    font-weight: bold;
    color: #fff;
    z-index: 5;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    word-wrap: break-word;
}

.hot-box .video-content .video-play {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    z-index: 5;
}

.hot-box .video-content .video-popularity {
    position: absolute;
    left: 30rpx;
    bottom: 0;
    padding-bottom: 10rpx;
    font-size: 26rpx;
    line-height: 46rpx;
    color: #fff;
    z-index: 5;
}

.hot-box .video-content .video-duration {
    position: absolute;
    right: 30rpx;
    bottom: 20rpx;
    height: 40rpx;
    padding: 0 18rpx;
    font-size: 26rpx;
    line-height: 40rpx;
    border-radius: 20rpx;
    background: rgba(0,0,0,0.4);
    color: #fff;
    z-index: 5;
}

.hot-box .box-bottom {
    width: 690rpx;
    height: 100rpx;
    padding: 0 30rpx;
    display: flex;
    align-items: center;
    background: #fff;
}

.hot-box .box-bottom .head-portrait {
    width: 60rpx;
    height: 60rpx;
    display: block;
    border-radius: 50%;
}

.hot-box .box-bottom .name {
    width: 422rpx;
    padding: 0 24rpx;
    font-size: 30rpx;
    line-height: 46rpx;
    color: #404040;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

@-webkit-keyframes vedioDynamicEffect {
    0% {
        transform: scale(1);
    }

    50% {
        transform: scale(1.2);
    }

    100% {
        transform: scale(1);
    }
}

@keyframes vedioDynamicEffect {
    0% {
        transform: scale(1);
    }

    50% {
        transform: scale(1.2);
    }

    100% {
        transform: scale(1);
    }
}

.hot-box .box-bottom .share-btn {
    width: 140rpx;
    height: 60rpx;
    padding: 0;
    background: transparent;
    border-radius: 35rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #18BB07;
}

.hot-box .box-bottom .share-btn::after {
    border: none;
}

.hot-box .box-bottom .share-btn image {
    width: 38rpx;
    height: 32rpx;
    display: block;
}

.hot-box .box-bottom .share-btn text {
    color: #fff;
    display: block;
    padding-right: 8rpx;
    line-height: 56rpx;
    font-size: 26rpx;
}

.unLockMask {
    width: 100%;
    height: 100vh;
    box-sizing: border-box;
    position: fixed;
    left: 0;
    top: 0;
    background: rgba(0,0,0,0.6);
    z-index: 99;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.unLockMask .lock-img {
    width: 241rpx;
    height: 190rpx;
    display: block;
}

.unLockMask .lock-txt {
    color: #fff;
    font-size: 30rpx;
    line-height: 40rpx;
    padding-top: 45rpx;
}