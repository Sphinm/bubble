page {
    height: auto;
}

.gift-list {
    padding: 30rpx 20rpx 30rpx 30rpx;
    box-sizing: border-box;
    overflow: hidden;
    background: #f8f8f8;
    min-height: 100vh;
}

.signDays {
    height: 36rpx;
    background: rgba(254,107,79,1);
    border-radius: 0 0 10rpx 0;
    position: absolute;
    line-height: 36rpx;
    text-align: center;
    font-size: 20rpx;
    color: #fff;
    left: 0rpx;
    top: 0rpx;
    box-sizing: border-box;
    padding: 0rpx 14rpx 0rpx 15rpx;
}

.gift {
    background: #fff!important;
    padding: 10rpx 0 0;
    width: 340rpx;
    height: 530rpx;
    box-sizing: border-box;
    float: left;
    border-radius: 10rpx;
    font-size: 0;
    margin-bottom: 20rpx;
    margin-right: 10rpx;
    text-align: left;
    display: flex;
    flex-direction: column;
    border: 1rpx solid rgb(236,236,236);
    outline: none;
}

.gift::after {
    border: none;
}

.gift-img {
    width: 318rpx;
    height: 316rpx;
    margin: 0 auto;
    display: block;
}

.gift-name {
    font-size: 28rpx;
    color: rgb(64,64,64);
    width: 100%;
    padding: 14rpx 10rpx 0 20rpx;
    box-sizing: border-box;
    line-height: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-weight: bold;
}

.golds {
    height: 28rpx;
    padding: 18rpx 20rpx 23rpx 20rpx;
    vertical-align: middle;
    font-size: 0;
}

.golds image {
    width: 24rpx;
    height: 24rpx;
    vertical-align: middle;
}

.gift-price {
    font-size: 24rpx;
    color: #fe6b4f;
    line-height: 28rpx;
    display: inline-block;
    padding-left: 4rpx;
    vertical-align: middle;
    font-weight: bold;
}

.exchangeTotal {
    float: right;
    font-size: 20rpx;
    color: #868686;
    line-height: 28rpx;
}

.deleteLine {
    text-decoration: line-through;
}

.exchange,.join-shop-cart {
    flex: 1;
    width: 100%;
    border-top: 1rpx solid #ececec;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    font-size: 0;
    vertical-align: text-top;
}

.exchange image {
    width: 40rpx;
    height: 28rpx;
    vertical-align: text-top;
}

.join-shop-cart image {
    width: 32rpx;
    height: 30rpx;
    vertical-align: text-top;
}

.exchange text {
    display: inline-block;
    height: 28rpx;
    line-height: 28rpx;
    font-size: 28rpx;
    padding-left: 12rpx;
    vertical-align: text-top;
    color: rgb(129,111,249);
}

.join-shop-cart text {
    display: inline-block;
    height: 28rpx;
    line-height: 28rpx;
    font-size: 28rpx;
    padding-left: 12rpx;
    vertical-align: text-top;
    color: #FE6B4F;
}

.adView {
    padding: 0;
}

.swiper {
    background: #f8f8f8;
    width: 690rpx;
    height: 230rpx;
    display: flex;
}

.slide-image {
    width: 690rpx;
    height: 200rpx;
    padding: 0 0 30rpx 0;
    background: #f8f8f8;
}

.imageadv {
    width: 689rpx;
    height: 200rpx;
}

.returncoin {
    position: absolute;
    top: 52rpx;
    left: 10rpx;
    width: 96rpx;
    height: 40rpx;
    background: linear-gradient(90deg,rgba(120,97,255,1),rgba(203,123,224,1));
    border-radius: 0rpx 10rpx 10rpx 0rpx;
    color: white;
    font-size: 24rpx;
    text-align: center;
    line-height: 40rpx;
}

.exchange-rule {
    position: absolute;
    top: 10rpx;
    left: 10rpx;
    padding-left: 13rpx;
    padding-right: 13rpx;
    height: 40rpx;
    background: rgba(254,107,79,0.8);
    border-radius: 0rpx 0rpx 10rpx 0;
    color: white;
    font-size: 20rpx;
    text-align: center;
    line-height: 40rpx;
}

.tips-coupon {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 80rpx;
    background: #FFF4EB;
    font-size: 28rpx;
    color: rgba(64,64,64,1);
    line-height: 80rpx;
    text-indent: 30rpx;
}

.tips-coupon text {
    color: #FE6B4F;
}