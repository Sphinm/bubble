page {
    background: #f8f8f8;
}

.banner-wrap {
    position: relative;
    height: 380rpx;
}

.bgCol {
    width: 750rpx;
    height: 230rpx;
    background-image: url(https://sns-images-test.bushubao.cn/img/2019/11/26/12/bc9f4ad52f5943c9a4160f242acbdf9a&750&231&.png);
    background-repeat: no-repeat;
    background-size: cover;
    position: absolute;
    left: 0;
    top: 0;
    z-index: -1;
}

.banSwiperBox {
    width: 702rpx;
    height: 360rpx;
    position: absolute;
    left: 24rpx;
    top: 20rpx;
    box-shadow: 0 3rpx 10rpx 0 rgba(207,207,207,0.75);
    border-radius: 16rpx;
    overflow: hidden;
}

.banSwiperItem .banImgBox {
    width: 702rpx;
    height: 360rpx;
    border-radius: 16rpx;
    overflow: hidden;
}

.banSwiperItem .banImgBox .banImg {
    width: 100%;
    height: 100%;
    display: block;
}

.limitBox {
    width: 702rpx;
    height: 364rpx;
    background: #fff;
    margin: 36rpx auto 0 auto;
    border-radius: 12rpx;
    padding: 24rpx;
    box-sizing: border-box;
}

.limitTop {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.limitTop .titImg {
    width: 247rpx;
    height: 60rpx;
}

.limitTop .limitTop-right {
    display: flex;
    align-items: center;
}

.limitTop .countDown {
    display: flex;
    align-items: center;
    margin-right: 16rpx;
}

.limitTop .countDown .timeBox {
    width: 34rpx;
    height: 34rpx;
    background: #343434;
    border-radius: 5rpx;
    color: #fff;
    font-size: 26rpx;
    line-height: 34rpx;
    text-align: center;
}

.limitTop .more {
    color: #868686;
    font-size: 24rpx;
}

.limitGoods {
    display: flex;
    justify-content: flex-start;
    margin-right: 10rpx;
    padding-top: 24rpx;
}

.limitGoods .limitGoods-item {
    width: 156rpx;
    margin-left: 16rpx;
}

.limitGoods .limitGoods-item:first-child {
    margin-left: 0;
}

.limitGoods .goodsImgBox {
    width: 156rpx;
    height: 156rpx;
    position: relative;
    background: #F8F8F8;
}

.limitGoods .goodsImg {
    width: 156rpx;
    height: 156rpx;
}

.limitGoods .dis {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 30rpx;
    background: #FF4609;
    color: #fff;
    font-size: 20rpx;
    text-align: center;
    line-height: 30rpx;
}

.limitGoods .price {
    color: #FF4609;
    font-size: 32rpx;
    text-align: center;
    padding-top: 16rpx;
    font-weight: bold;
    line-height: 1;
}

.limitGoods .price .rmb {
    font-size: 24rpx;
}

.limitGoods .line-price {
    color: #B6B6B6;
    font-size: 24rpx;
    text-align: center;
    text-decoration: line-through;
}

.classifyTab {
    padding: 30rpx 30rpx 4rpx 30rpx;
    box-sizing: border-box;
    white-space: nowrap;
    height: 84rpx;
}

.classifyTab.fixed {
    background: #fff;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 9999;
}

.classifyTab-item {
    display: inline-block;
    height: 42rpx;
    line-height: 38rpx;
    margin-right: 68rpx;
    font-size: 28rpx;
    color: #404040;
}

.classifyTab-item:last-child {
    margin-right: 0;
}

.classifyTab-item.cur {
    font-size: 32rpx;
    color: #FF4609;
    border-bottom: 4rpx solid #FF4609;
}

.goodsListSwiper {
    width: 100%;
    overflow: hidden;
    padding-top: 24rpx;
    padding-bottom: 40rpx;
}

.goodsList {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    padding: 0 24rpx;
}

.goodsItem {
    background: #fff;
    width: 340rpx;
    height: 578rpx;
    border-radius: 10rpx;
    overflow: hidden;
    margin-bottom: 24rpx;
}

.goodsItem .goodsImg {
    width: 340rpx;
    height: 320rpx;
    display: block;
    background: #ccc;
}

.goodsItem .goodsInfo {
    padding: 18rpx 24rpx 0 24rpx;
}

.goodsItem .goodsName {
    width: 100%;
    overflow: hidden;
    height: 68rpx;
    line-height: 34rpx;
    color: #404040;
    font-size: 26rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.goodsItem .lowest {
    font-size: 20rpx;
    color: #FF4609;
    padding-top: 8rpx;
}

.goodsItem .goodsPrice {
    font-size: 32rpx;
    color: #FF4609;
}

.goodsItem .goodsPrice .line {
    font-size: 26rpx;
    color: #B6B6B6;
    text-decoration: line-through;
}

.goodsItem .goodsBtn {
    width: 100%;
    height: 52rpx;
    background: linear-gradient(90deg,rgba(105,80,254,1),rgba(219,101,250,1));
    border-radius: 26rpx;
    color: #fff;
    font-size: 28rpx;
    line-height: 52rpx;
    text-align: center;
    margin-top: 14rpx;
}

.noMore {
    text-align: center;
    padding-bottom: 60rpx;
    color: #868686;
    font-size: 26rpx;
}