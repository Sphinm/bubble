.cotainer {
    background: #f8f8f8;
    width: 100%;
    min-height: 75%;
    height: auto;
    padding-bottom: 260rpx;
}

page {
    height: 100%;
    font-family: 'PingFang-SC-Regular';
    margin: 0px;
    padding: 0px;
    box-sizing: border-box;
    background: #f8f8f8;
}

.main {
    position: relative;
    margin-top: 167rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    text-align: justify;
    word-break: break-all;
    height: auto;
}

.topline {
    position: absolute;
    top: 0;
    width: 100%;
    height: 1rpx;
    background: #ececec;
}

.topinfo {
    position: absolute;
    width: 100%;
    height: 166rpx;
    top: 1rpx;
}

.topinfo .top_title {
    position: absolute;
    font-size: 28rpx;
    color: rgb(134,134,134);
    top: 26rpx;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
}

.topinfo .top_step {
    position: absolute;
    font-size: 70rpx;
    color: rgb(35,35,35);
    top: 68rpx;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
}

.middleline {
    position: absolute;
    top: 167rpx;
    width: 100%;
    height: 20rpx;
    background: #ececec;
}

.bottomline {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 1rpx;
    background: #ececec;
}

.stepfa {
    position: relative;
    height: 120rpx;
    left: 0;
    width: 100%;
}

.stepDetails {
    position: absolute;
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
}

.stepDetails .steptitle {
    position: absolute;
    font-size: 30rpx;
    line-height: 30rpx;
    color: rgb(35,35,35);
    left: 30rpx;
    top: 32rpx;
}

.stepDetails .steptime {
    position: absolute;
    font-size: 24rpx;
    line-height: 24rpx;
    color: rgb(134,134,134);
    left: 30rpx;
    top: 80rpx;
}

.stepDetails .stepnumberpius {
    position: absolute;
    font-size: 30rpx;
    color: rgb(243,93,93);
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
}

.stepDetails .stepnumberminus {
    position: absolute;
    font-size: 30rpx;
    color: rgb(72,209,69);
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
}

.nonepic {
    width: 287rpx;
    height: 224rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 420rpx;
}

.nonepic image {
    width: 100%;
    height: 100%;
}

.nothing {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    font-size: 30rpx;
    color: rgb(134,134,134);
}

.swiper {
    background: #f8f8f8;
    width: 690rpx;
    height: 260rpx;
    padding: 0 30rpx;
    position: fixed;
    bottom: 0rpx;
    left: 0;
    display: flex;
}

.slide-image {
    width: 690rpx;
    height: 200rpx;
    padding: 30rpx 0 30rpx 0;
    background: #f8f8f8;
}

.imageadv {
    width: 689rpx;
    height: 200rpx;
}

.adView {
    margin-top: -210rpx;
}