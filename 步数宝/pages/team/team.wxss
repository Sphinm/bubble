.sport-team {
    padding: 10rpx 30rpx 40rpx;
}

.banner-box {
    padding-bottom: 20rpx;
    height: 200rpx;
    position: relative;
}

.banner-box .banner {
    display: block;
    width: 690rpx;
    height: 200rpx;
}

.banner-box .rule {
    position: absolute;
    right: 0;
    top: 28rpx;
    width: 90rpx;
    height: 48rpx;
    text-align: center;
    background: rgba(255,255,255,0.3);
    line-height: 48rpx;
    font-size: 28rpx;
    color: #fff;
    border-radius: 24rpx 0 0 24rpx;
}

.create-team {
    width: 690rpx;
    box-sizing: border-box;
    padding: 40rpx 45rpx 22rpx;
    box-shadow: 0 2rpx 8rpx 0 rgba(0,0,0,0.06);
    border-radius: 20rx;
}

.create-team .create-step {
    width: 600rpx;
    display: flex;
}

.create-team .create-step .step-box {
    width: 200rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
    position: relative;
}

.create-team .step-box .step-img {
    width: 100rpx;
    height: 99rpx;
}

.create-team .step-box .step-desc {
    font-size: 24rpx;
    color: #404040;
    line-height: 40rpx;
    padding-top: 8rpx;
    display: block;
}

.create-team .step-box .next-step {
    position: absolute;
    right: -15rpx;
    top: 35rpx;
    width: 30rpx;
    height: 30rpx;
}

.create-team .team-content {
    padding-top: 22rpx;
    display: block;
}

.create-team .team-content .team-name {
    width: 600rpx;
    height: 90rpx;
    box-sizing: border-box;
    border: 1px solid rgba(236,236,236,1);
    border-radius: 10rpx;
    line-height: 88rpx;
    padding: 0 30rpx;
    margin-bottom: 20rpx;
    font-size: 28rpx;
    background: #f8f8f8;
    color: #404040;
}

.create-team .team-content .team-manifesto {
    width: 600rpx;
    height: 200rpx;
    box-sizing: border-box;
    border: 1px solid rgba(236,236,236,1);
    border-radius: 10rpx;
    padding: 26rpx 30rpx;
    background: #f8f8f8;
    font-size: 28rpx;
    line-height: 40rpx;
    color: #404040;
}

.create-team .team-content .team-target {
    padding-top: 26rpx;
    height: 40rpx;
    display: flex;
    padding-bottom: 94rpx;
}

.create-team .team-content .team-target .txt {
    font-size: 28rpx;
    color: #404040;
    line-height: 40rpx;
}

.create-team .team-content .team-target .place {
    flex: 1;
}

.create-team .team-content .team-target picker {
    display: flex;
    align-items: center;
}

.create-team .team-content .team-target .num {
    line-height: 40rpx;
    font-size: 36rpx;
    color: #404040;
    padding-right: 15rpx;
    display: inline-block;
}

.create-team .team-content .team-target .arrow {
    display: inline-block;
    width: 28rpx;
    height: 28rpx;
}

.create-team .team-content .submit-btn {
    width: 600rpx;
    height: 80rpx;
    background: linear-gradient(90deg,rgba(120,97,255,1),rgba(203,123,224,1));
    border-radius: 40rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    font-size: 32rpx;
    display: block;
    padding: 0;
}

.authorized-box {
    position: relative;
    width: 600rpx;
    height: 80rpx;
}

.authorized-box .authorized-btn {
    width: 600rpx;
    height: 80rpx;
    position: absolute;
    left: 0;
    top: 0;
    background: transparent;
    z-index: 9;
}

button::after {
    border: none;
}

.create-team .create-desc {
    font-size: 24rpx;
    text-align: center;
    line-height: 40rpx;
    padding-top: 20rpx;
    color: #fe6b4f;
}

.team-list .title {
    padding-bottom: 20rpx;
    display: flex;
    height: 56rpx;
    justify-content: space-between;
    align-items: center;
}

.team-list .title .txt {
    font-size: 30rpx;
    color: #404040;
}

.team-list .title .create-btn {
    position: relative;
    width: 150rpx;
    height: 56rpx;
    box-sizing: border-box;
    background: linear-gradient(90deg,rgba(120,97,255,1),rgba(203,123,224,1));
    border-radius: 28rpx;
    padding: 2rpx;
}

.team-list .create-btn text {
    display: block;
    width: 146rpx;
    height: 52rpx;
    line-height: 52rpx;
    background: #fff;
    text-align: center;
    font-size: 26rpx;
    color: #7a61fe;
    border-radius: 26rpx;
}

.team-list .create-btn .authorized-btn {
    position: absolute;
    left: 0;
    top: 0;
    width: 150rpx;
    height: 56rpx;
    z-index: 9;
    background: transparent;
}

.team-list .team-box {
    display: flex;
    width: 690rpx;
    height: 200rpx;
    box-shadow: 0 2rpx 8rpx 0 rgba(0,0,0,0.1);
    margin-bottom: 20rpx;
    border-radius: 10rpx;
}

.team-list .team-box .left {
    width: 178rpx;
    padding-left: 5rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.team-list .team-box .left image {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    display: block;
}

.team-list .team-box .center {
    flex: 1;
}

.team-list .team-box .center .team-name {
    display: flex;
    font-size: 32rpx;
    color: #404040;
    padding-top: 38rpx;
    height: 40rpx;
}

.team-list .team-name text {
    line-height: 1;
    padding-right: 23rpx;
    font-weight: bold;
}

.team-list .team-name image {
    width: 44rpx;
    height: 38rpx;
}

.team-list .team-box .team-leader {
    font-size: 26rpx;
    color: #404040;
    line-height: 40rpx;
    padding-top: 15rpx;
}

.team-list .team-box .team-composition {
    font-size: 26rpx;
    color: #404040;
    line-height: 40rpx;
    padding-top: 5rpx;
}

.team-list .team-box .team-composition text:last-child {
    padding-left: 60rpx;
    display: inline-block;
}

.team-list .team-box .right {
    width: 27rpx;
    padding: 0 27rpx;
    display: flex;
    align-items: center;
}

.team-list .team-box .right image {
    width: 27rpx;
    height: 37rpx;
    display: block;
}