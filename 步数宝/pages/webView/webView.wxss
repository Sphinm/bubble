.container {
    width: 100%;
    height: 100%;
    background-color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.top-image {
    position: relative;
    width: 100%;
    height: 240rpx;
}

.container .title {
    position: relative;
    font-size: 36rpx;
    font-weight: bold;
    color: rgba(64,64,64,1);
    margin-top: 80rpx;
}

.container .wxchat {
    position: relative;
    font-size: 36rpx;
    color: rgba(134,134,134,1);
    margin-top: 30rpx;
}

.container .btn {
    font-size: 36rpx;
    color: white;
    width: 320rpx;
    height: 80rpx;
    background: linear-gradient(90deg,rgba(254,107,79,1),rgba(254,148,83,1));
    border-radius: 40rpx;
    margin-top: 50rpx;
    text-align: center;
    line-height: 80rpx;
}

.container .content {
    margin-top: 90rpx;
    position: relative;
    width: 100%;
    height: 150rpx;
    font-size: 30rpx;
    color: #868686;
    display: flex;
    flex-direction: column;
}

.container .detail {
    margin-left: 30rpx;
    margin-right: 30rpx;
}