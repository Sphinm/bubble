.container {
    background-color: #fff;
    box-sizing: border-box;
}

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
}

.modal-main {
    position: fixed;
    width: 500rpx;
    height: 300rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-55%);
    z-index: 9980;
}

.modal-wx-ad {
    position: fixed;
    bottom: 0;
    left: 50%;
    transform: translate(-50%,0);
    z-index: 9980;
}

.unified-close {
    position: absolute;
    bottom: -70rpx;
    left: 50%;
    transform: translate(-50%,0);
    width: 60rpx;
    height: 60rpx;
}

.unified-we-ad {
    position: absolute;
    bottom: -250rpx;
    left: 50%;
    transform: translate(-50%,0);
    z-index: 9980;
}