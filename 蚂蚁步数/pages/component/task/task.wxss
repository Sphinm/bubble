.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
}

.modal-main {
    position: fixed;
    width: 500rpx;
    height: 300rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-55%);
    z-index: 9998;
}

.unified-close {
    position: absolute;
    bottom: -80rpx;
    left: 50%;
    transform: translate(-50%,0);
    width: 60rpx;
    height: 60rpx;
}

.task-coin {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 417rpx;
    right: 37rpx;
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    border: 2rpx solid #d5ae6f;
    font-size: 20rpx;
    color: #826030;
    z-index: 1;
    animation: dithering 2s infinite;
}

.float-coin {
    width: 118rpx;
    height: 118rpx;
    border: 0;
}

.float-num {
    margin-bottom: 10rpx;
    color: #826030;
}

@-webkit-keyframes dithering {
    0% {
        transform: translateY(0rpx);
    }

    50% {
        transform: translateY(-10rpx);
    }

    100% {
        transform: translateY(0rpx);
    }
}

@keyframes dithering {
    0% {
        transform: translateY(0rpx);
    }

    50% {
        transform: translateY(-10rpx);
    }

    100% {
        transform: translateY(0rpx);
    }
}

.task-coin-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    z-index: -1;
}

.task-num {
    margin-bottom: 10rpx;
}

.task-label {
    position: absolute;
    bottom: -36rpx;
    left: -20rpx;
    width: 137rpx;
    text-align: center;
    font-size: 26rpx;
    color: #fff;
}

.modal-task {
    width: 588rpx;
    height: 884rpx;
}

.bg-task {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.task-reward {
    position: absolute;
    top: 308rpx;
    left: 50%;
    transform: translate(-50%,0);
    width: 420rpx;
    height: 150rpx;
    line-height: 150rpx;
    text-align: center;
    font-size: 100rpx;
    color: #fff000;
}

.step-unit {
    font-size: 40rpx;
}

.task-content {
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 532rpx;
    left: 50%;
    transform: translate(-50%,0);
    width: 510rpx;
    height: 150rpx;
}

.task-icon {
    width: 100rpx;
    height: 100rpx;
}

.task-tips1 {
    position: absolute;
    top: 480rpx;
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #fff000;
}

.task-tips2 {
    position: absolute;
    bottom: 30rpx;
    width: 100%;
    text-align: center;
    font-size: 24rpx;
    color: #fff;
}

.task-text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    width: 380rpx;
    height: 150rpx;
    margin-left: 20rpx;
    font-size: 26rpx;
    color: #fff;
}

.task-title {
    margin-bottom: 10rpx;
}

.btn-jump-app {
    position: absolute;
    bottom: 85rpx;
    left: 50%;
    width: 451rpx;
    height: 80rpx;
    transform: translate(-50%,0);
    line-height: 80rpx;
    text-align: center;
    font-size: 36rpx;
    font-weight: bold;
    color: #ea3937;
}

.btn-jump-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.modal-fail {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    transform: translate(-50%,-70%);
    border-radius: 15rpx;
    width: 600rpx;
    height: 500rpx;
    background-color: #fff;
}

.tip-title {
    font-size: 50rpx;
    color: #000;
}

.fail-img {
    width: 100rpx;
    height: 100rpx;
    margin-top: 30rpx;
}

.tips {
    margin-top: 30rpx;
    font-size: 28rpx;
    color: #606060;
}

.btn-fail-items {
    width: 380rpx;
    height: 70rpx;
    line-height: 70rpx;
    margin-top: 30rpx;
    color: #826030;
    background: linear-gradient(180deg,#fae7b6,#c0904a);
}

.fail-close {
    position: absolute;
    bottom: -90rpx;
    left: 50%;
    transform: translate(-50%,0);
    width: 50rpx;
    height: 50rpx;
}