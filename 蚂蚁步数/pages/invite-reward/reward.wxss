.container {
    position: relative;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

.hide-submit {
    position: absolute;
    opacity: 0;
    z-index: -1;
}

.invite-banner {
    width: 100%;
    height: 200rpx;
}

.rule-ins {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 750rpx;
    height: 80rpx;
    border: 1rpx solid #ddd;
    font-size: 28rpx;
    color: #454545;
    box-shadow: 0 2rpx 10rpx #ccc;
}

.rule-tips {
    margin-left: 40rpx;
}

.history {
    margin-right: 40rpx;
}

.list-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 1;
}

.list-items {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    position: relative;
    width: 732rpx;
    height: 252rpx;
    margin-top: 20rpx;
}

.bg-list-items {
    position: absolute;
    top: 0;
    left: 0;
    width: 732rpx;
    height: 252rpx;
    z-index: -1;
}

.list-red {
    width: 180rpx;
    height: 180rpx;
    margin: 0 16rpx 10rpx 30rpx;
}

.list-des {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: flex-start;
    font-size: 28rpx;
    height: 180rpx;
    color: #000;
}

.list-tips1 {
    font-size: 34rpx;
}

.list-tips2 {
    color: #454545;
}

.list-tips4 {
    margin-left: 6rpx;
    color: #666;
    font-size: 24rpx;
}

.keyward {
    color: #ff4c51;
}

.list-btn {
    position: absolute;
    top: 34rpx;
    right: 30rpx;
    width: 120rpx;
    height: 60rpx;
}

.time {
    position: absolute;
    right: 30rpx;
    bottom: 20rpx;
    width: 170rpx;
    height: 60rpx;
    font-size: 24rpx;
    text-align: right;
    color: #666;
}

.btn-share {
    opacity: 0;
}

.modal-open-red {
    width: 590rpx;
    height: 682rpx;
}

.open-red-img {
    width: 590rpx;
    height: 682rpx;
}

.open-close {
    position: absolute;
    top: -70rpx;
    right: 0;
    width: 70rpx;
    height: 70rpx;
}

.open-reward {
    position: absolute;
    top: 150rpx;
    left: 0;
    width: 100%;
    font-size: 34rpx;
    color: #fffac4;
    text-align: center;
}

.reward-tip1 {
    top: 250rpx;
    color: #f4a483;
    font-size: 24rpx;
}

.reward-tip2 {
    top: 489rpx;
    left: 7rpx;
}

.open-keyword {
    font-size: 80rpx;
    color: #fff000;
}

.next-open {
    position: absolute;
    bottom: 160rpx;
    left: 0;
    width: 100%;
    font-size: 34rpx;
    color: #fffac4;
    text-align: center;
}

.go-run-s {
    position: absolute;
    bottom: 40rpx;
    left: 50rpx;
    width: 211rpx;
    height: 90rpx;
}

.open-invite {
    position: absolute;
    bottom: 40rpx;
    left: 330rpx;
    width: 211rpx;
    height: 90rpx;
    z-index: 1;
}

.open-share {
    opacity: 0;
    z-index: 2;
}