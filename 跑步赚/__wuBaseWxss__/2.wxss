.good-list {
    width: 100%;
    overflow: hidden;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    padding-left: 18rpx;
    padding-right: 18rpx;
    flex-wrap: wrap;
    background: #fff;
}

.good-item-view {
    width: 348rpx;
    overflow: hidden;
    position: relative;
    margin-top: 8rpx;
    float: left;
    border-radius: 12rpx;
    border: 2rpx solid rgba(0,0,0,0.02);
    box-shadow: 0px 0px 12rpx 0px rgba(0,0,0,0.12);
}

.good-item {
    width: 348rpx;
    overflow: hidden;
    background-color: #fff;
    margin-bottom: 6rpx;
    padding-bottom: 18rpx;
    background: rgba(255,255,255,1);
    border-radius: 12px;
}

.good-item .good-image {
    position: relative;
    border-radius: 12rpx;
}

.good-item .good-image .step-reward {
    position: absolute;
    top: 0;
    right: 0;
    padding: 0 6rpx;
    height: 48rpx;
    background: linear-gradient(270deg,rgba(255,58,51,1) 0%,rgba(255,92,92,1) 100%);
    border-radius: 0rpx 0rpx 0rpx 18rpx;
    line-height: 48rpx;
    color: #fff;
    font-size: 24rpx;
    text-align: center;
}

.good-item .good-image image {
    width: 348rpx;
    height: 348rpx!important;
    border-bottom-left-radius: 12rpx;
    border-bottom-right-radius: 12rpx;
    border-radius: 12rpx;
}

.good-name {
    margin-top: 12rpx;
    margin-left: 24rpx;
    font-size: 30rpx;
    font-weight: bold;
    width: 318rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    margin-bottom: 12rpx;
    padding-bottom: 0rpx;
    letter-spacing: 2rpx;
}

.youhui {
    display: flex;
    font-size: 18rpx;
    color: #ff4a4a;
    padding: 0 24rpx;
}

.price {
    padding: 8rpx 24rpx;
    padding-bottom: 0rpx;
}

.good-item-view button image {
    width: 24rpx;
    height: 24rpx;
    margin-left: 6rpx;
}

.price {
    font-size: 40rpx;
    font-weight: bold;
    color: #ff4a4a;
}

.price .big-font {
    font-size: 40rpx;
}

.price text {
    font-size: 28rpx;
}