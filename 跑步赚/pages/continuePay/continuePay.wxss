.wait {
    width: 100%;
    height: 276rpx;
    box-sizing: border-box;
    line-height: 156rpx;
    padding: 0 30rpx;
    color: #fff;
    display: flex;
    justify-content: space-between;
}

.wait .wait-name {
    font-size: 36rpx;
    font-weight: 600;
}

.wait .wait-time {
    font-size: 30rpx;
}

.order-detail {
    width: 690rpx;
    margin: -120rpx auto 0;
    background: #f0f0f0;
    box-sizing: border-box;
    border-radius: 30rpx;
    box-shadow: 0rpx 0rpx 30rpx 0rpx rgba(219,219,219,0.5);
    overflow: hidden;
}

.order-detail .good-top {
    width: 100%;
    padding: 30rpx;
    height: 276rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    background: #fff;
}

.order-detail .good-top image {
    width: 216rpx;
    height: 216rpx;
    margin-right: 30rpx;
    border-radius: 12rpx;
}

.order-detail .good-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.order-detail .good-name {
    line-height: 42rpx;
    min-height: 126rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    line-clamp: 3;
    -webkit-box-orient: vertical;
}

.order-detail .good-price {
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
}

.order-detail .good-old-price {
    text-decoration: line-through;
}

.order-detail .buy-num {
    color: #999;
}

.address {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    background: #fff;
    padding: 0 30rpx 30rpx;
}

.address .name {
    font-size: 36rpx;
    font-weight: bold;
}

.address-info {
    text-align: right;
    line-height: 36rpx;
}

.address-info .change-address {
    margin-top: 30rpx;
}

.order-num,.order-time,.order-btns {
    background: #fff;
}

.order-num {
    padding: 30rpx;
    font-weight: bold;
    font-size: 30rpx;
}

.order-num .item {
    line-height: 48rpx;
}

.order-num .order-time {
    font-weight: normal;
}

.order-btns {
    display: flex;
    padding: 30rpx;
    justify-content: space-between;
    align-items: center;
    font-size: 30rpx;
}

.go-pay {
    width: 180rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    color: #fff;
    border-radius: 36rpx;
    background-image: linear-gradient(180deg,#fe6f62 0%,#ef2d2d 100%);
    box-shadow: 0rpx 0rpx 30rpx 0rpx rgba(255,74,74,0.5);
}