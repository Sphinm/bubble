@import "../../template/followPublic/followPublic.wxss";

.good-detail {
    padding-bottom: 120rpx;
    font-size: 30rpx;
}

.good-info {
    margin: 30rpx;
    box-shadow: 0rpx 0rpx 30rpx 0rpx rgba(219,219,219,0.5);
    border-radius: 30rpx;
    overflow: hidden;
}

.good-otherInfo {
    padding: 30rpx;
}

.good-money {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.good-money .old-money {
    text-decoration: line-through;
}

.good-money .duihuan-num {
    color: #999;
}

.good-jinbi {
    font-size: 42rpx;
}

.good-title {
    margin-top: 30rpx;
    font-size: 36rpx;
    font-weight: bold;
    position: relative;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    line-clamp: 2;
    -webkit-box-orient: vertical;
}

.good-title image {
    display: inline-block;
    width: 60rpx;
    height: 30rpx;
    margin-right: 12rpx;
}

.duihuan-record {
    width: 690rpx;
    margin: 30rpx auto;
    background-color: #fff;
    box-shadow: 0rpx 0rpx 30rpx 0rpx rgba(219,219,219,0.5);
    border-radius: 15rpx;
}

.duihuan-record .header {
    padding: 30rpx;
    background-color: #fbfbfb;
    display: flex;
    font-size: 36rpx;
    font-weight: bold;
    justify-content: space-between;
    align-items: flex-end;
}

.duihuan-record .get-more {
    font-size: 30rpx;
    font-weight: normal;
}

.duihuan-list {
    padding: 30rpx 30rpx 0;
}

.duihuan-list .duihuan-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 30rpx;
}

.duihuan-list .duihuan-item image {
    width: 48rpx;
    height: 48rpx;
    margin-right: 30rpx;
    display: inline-block;
    border-radius: 24rpx;
}

.duihuan-list .duihuan-item .duihuan-name {
    flex: 1;
}

.duihuan-list .duihuan-item .duihuan-time {
    color: #999;
}

.share-friends {
    text-align: center;
    margin: 30rpx;
    box-shadow: 0rpx 0rpx 30rpx 0rpx rgba(219,219,219,0.5);
    border-radius: 30rpx;
}

.share-title {
    font-size: 36rpx;
    color: #252c3f;
    padding: 24rpx 0;
}

.share-limit {
    font-size: 28rpx;
    color: #252c3f;
    opacity: 0.6;
}

.share-avators {
    padding: 30rpx 30rpx 0;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.share-avators .head_image {
    width: 84rpx;
    height: 84rpx;
    border-radius: 50%;
    margin-right: 52rpx;
    margin-bottom: 30rpx;
}

.share-avators .head_image image {
    width: 100%;
    height: 100%;
}

.share-avators .head_image:nth-of-type(5n) {
    margin-right: 0;
}

.ad {
    margin: 24rpx 30rpx;
    border-radius: 12rpx;
    overflow: hidden;
}

.rules {
    box-shadow: 0rpx 0rpx 30rpx 0rpx rgba(219,219,219,0.5);
    border-radius: 30rpx;
    margin: 30rpx 30rpx 0;
    padding: 30rpx;
    box-sizing: border-box;
    margin-top: 30rpx;
    line-height: 50rpx;
}

.rules .header {
    font-size: 36rpx;
    margin-bottom: 30rpx;
}

.title {
    font-size: 28rpx;
    color: #333;
    text-align: center;
    padding-bottom: 20rpx;
}

.rule_font {
    font-family: PingFang-SC-Medium;
    font-size: 24rpx;
    color: #333;
}

.bug-btns {
    width: 100%;
    text-align: center;
    position: fixed;
    bottom: 0;
    left: 0;
    height: 96rpx;
}

.bug-btns .exchange {
    line-height: 96rpx;
    box-shadow: 0px 0px 12px 0px rgba(60,60,73,0.14);
    font-size: 36rpx;
    border-radius: 0;
    background-image: linear-gradient(90deg,#ff4b44 0%,#ff8164 100%);
    color: #fff;
}

.exchange image {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: 70rpx;
    top: 34rpx;
}

.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
}

.drawer_attr_box {
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 1001;
    background: #fff;
    box-shadow: 0px 0px 12rpx 0px rgba(60,60,73,0.3);
    border-radius: 12rpx 12rpx 0px 0px;
    transform: translateY(300px);
}

.address_head {
    display: flex;
    padding: 30rpx;
    position: relative;
}

.address_head image {
    width: 240rpx;
    height: 178rpx;
    border-radius: 12rpx;
    border: 2rpx solid #fbfbfb;
}

.address_head .close {
    position: absolute;
    top: 0;
    right: 0;
    width: 36rpx;
    height: 36rpx;
    padding: 24rpx;
}

.product_sku {
    font-family: PingFang-SC-Medium;
    font-size: 28rpx;
    color: #252c3f;
    opacity: 0.3;
}

.address_desc {
    padding: 48rpx 30rpx;
    display: flex;
    justify-content: space-between;
}

.address_font {
    width: 100rpx;
    font-size: 36rpx;
    color: #252c3f;
}

.address_info {
    text-align: right;
    font-size: 28rpx;
    color: #252c3f;
}

.alert {
    font-size: 28rpx;
    color: #ff4c44;
    margin-top: 4rpx;
}

.address-xiangxi {
    margin-top: 6rpx;
}

.redgood-pop {
    padding: 30rpx;
}

.redgood-pop .content {
    margin-top: 30rpx;
}

.good-title-view {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 30rpx;
    font-size: 30rpx;
}

.good-title-view .good-title {
    font-weight: bold;
}

.good-title-view .stock {
    opacity: 0.3;
}

.lijiduihuan {
    padding: 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 30rpx;
}

.lijiduihuan button {
    width: 240rpx;
    height: 78rpx;
    background: #ef2d2d;
    box-shadow: 0rpx 0rpx 30rpx 0rpx rgba(255,74,74,0.5);
    border-radius: 39rpx;
    font-size: 30rpx;
    color: #fff;
}

.noexchange {
    width: 100%;
    height: 100%;
    display: flex;
    background: #fff;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.yundongbi-buzu {
    display: flex;
    flex: 1;
    align-items: center;
}

.yundongbi-buzu image {
    width: 36rpx;
    height: 36rpx;
    margin: 0 auto 6rpx;
}

.yundongbi-buzu button,.yundongbi-buzu navigator {
    width: 136rpx;
    height: 78rpx;
    font-size: 24rpx;
    line-height: 1;
    color: #333;
}

.buzu-btn {
    width: 360rpx;
}

.buzu-btn button {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 72rpx;
    color: #fff;
    background: #ef2d2d;
    line-height: 72rpx;
    margin-top: 12rpx;
    border-radius: 36rpx;
    font-size: 30rpx;
}

.buzu-btn button image {
    margin-left: 6rpx;
    width: 30rpx;
    height: 30rpx;
    margin-right: 12rpx;
}