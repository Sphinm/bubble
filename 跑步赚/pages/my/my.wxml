                <view class="qddtask-des-name">购买1件商品</view>
                <view class="qddtask-des-reward">最高可领50话费币</view>
            </view>
        </navigator>
        <navigator appId="wx23e629f01410a52f" class="qddtask-item qddtask-item-2" path="/pages/index/index?uid={{userId}}&type=private&url=https://online.litemob.com/run/api/get_look_shop_gold" target="miniProgram" version="trial">
            <image class="qddtask-image" src="http://oss-server.litemob.net/LiteMob_B729730767281586.jpg"></image>
            <view class="qddtask-des">
                <view class="qddtask-des-name">浏览商品1分钟</view>
                <view class="qddtask-des-reward">最高可领20话费币</view>
            </view>
        </navigator>
    </view>
    <view class="more">
        <view class="header">赚话费币</view>
        <view class="row"></view>
        <view class="items">
            <view class="item">
                <view class="icon">
                    <image src="http://oss-server.litemob.net/LiteMob_B816614539133127.jpg"></image>
                </view>
                <view class="two">
                    <view class="top">唤醒好友得话费币</view>
                    <view class="bottom">唤醒一位3日未上线的好友</view>
                </view>
                <button class="get-bi" openType="share">领5币</button>
            </view>
            <ad adTheme="white" adType="video" unitId="adunit-3b21838098f526b1"></ad>
            <view class="ad-view" wx:if="{{false}}">
                <swiper autoplay="{{autoplay}}" circular="{{true}}" duration="1500" interval="3000" wx:if="{{appAd&&appAd.app==1||showGdtBanner}}">
                    <swiper-item wx:if="{{appAd&&appAd.app==1}}">
                        <navigator class="app-ad" url="/pages/downloadApp/downloadApp">
                            <image src="{{appAd.image}}"></image>
                        </navigator>
                    </swiper-item>
                    <swiper-item wx:if="{{showGdtBanner}}">
                        <view class="item">
                            <ad binderror="hideGdtSwiper" unitId="adunit-2243aaeca637d7ba"></ad>
                        </view>
                    </swiper-item>
                </swiper>
            </view>
        </view>
    </view>
    <ad-task id="adList" isMy="{{true}}" showHeader="{{true}}"></ad-task>
</view>
