                        <image src="http://litemob-bbz.oss-cn-beijing.aliyuncs.com/Me6dbddb449861396209afe69dccaa26a.jpg"></image>
                        <view>待发货</view>
                    </navigator>
                    <navigator class="order-item" url="/pages/order/order?status=2">
                        <image src="http://litemob-bbz.oss-cn-beijing.aliyuncs.com/Maca8dcbde0e113ef60d430555744a691.jpg"></image>
                        <view>待收货</view>
                    </navigator>
                    <button class="order-item" openType="contact">
                        <image src="http://litemob-bbz.oss-cn-beijing.aliyuncs.com/M0427a396c9fa298097037e7bab2d2e39.jpg"></image>
                        <view>客服</view>
                    </button>
                </view>
            </view>
