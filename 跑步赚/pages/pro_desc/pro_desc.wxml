<view class="cont" hidden="{{p_hide}}" wx:if="{{hide==true}}">
    <view class="pro_info">
        <swiper autoplay="true" class="swiper" duration="500" interval="2000">
            <swiper-item wx:for="{{goodinfo.goods_gallery_urls}}" wx:key="mov">
                <image class="slide-image" mode="aspectFill" src="{{item}}"></image>
            </swiper-item>
        </swiper>
        <view class="p_desc">
            <view class="good-title">
                <image class="baoyou" src="../../images/more.png"></image>
                <text>{{goodinfo.goods_name}}</text>
            </view>
        </view>
        <view class="pri_desc">
            <view class="pri_des">
                <view class="price">
                    <text>￥</text>
                    <text>{{goodinfo.price_explode[0]}}</text>
                    <text class="text-1">.{{goodinfo.price_explode[1]}}</text>
                </view>
                <view class="old_price">拼多多价 : ￥{{goodinfo.min_group_price}} </view>
            </view>
            <button class="s_qb" openType="share">
                <image src="../../images/d_share.png"></image>
                <view class="font_shar">分享</view>
            </button>
        </view>
        <view class="row"></view>
        <view class="geta">券￥{{goodinfo.coupon_discount}}</view>
        <view class="rowsss"></view>
        <view class="pf">
            <view class="first">
                <view>
                    <image class="p1" src="../../images/g1.png"></image>
                </view>
                <view class="p_des">自购返现</view>
            </view>
            <view class="first">
                <view>
                    <image class="p1" src="../../images/g2.png"></image>
                </view>
                <view class="p_des">分享赚钱</view>
            </view>
            <view class="first">
                <view>
                    <image class="p1" src="../../images/g3.png"></image>
                </view>
                <view class="p_des">优选好货</view>
            </view>
            <view class="first">
                <view>
                    <image class="p1" src="../../images/g4.png"></image>
                </view>
                <view class="p_des">无忧售后</view>
            </view>
        </view>
    </view>
    <view class="process">
        <view class="hintss">
            <view class="hint11">
                <view class="hei_qiu">
                    <view class="qiu"></view>
                </view>
                <view class="hei_qiu">
                    <view class="qius"></view>
                </view>
                <view class="small-hint">购物返现省钱流程</view>
                <view class="hei_qiu">
                    <view class="qius"></view>
                </view>
                <view class="hei_qiu">
                    <view class="qiu"></view>
                </view>
            </view>
        </view>
        <view class="step">
            <view class="info">
                <view class="inf">
                    <image class="q" src="../../images/q1.png"></image>
                </view>
                <view class="sale">领券购买</view>
            </view>
            <view class="jt">
                <image class="jiantou" src="../../images/q.png"></image>
            </view>
            <view class="info1">
                <view class="inf">
                    <image class="q1" src="../../images/q2.png"></image>
                </view>
                <view class="sale1">跳转拼多多</view>
            </view>
            <view class="jt">
                <view class="inf">
                    <image class="jiantou" src="../../images/q.png"></image>
                </view>
            </view>
            <view class="info2">
                <view class="inf">
                    <image class="q2" src="../../images/q3.png"></image>
                </view>
                <view class="sale2">优惠下单</view>
            </view>
        </view>
    </view>
    <ad unitId="adunit-a1b2b4b521c776ff"></ad>
    <view class="b_w">
        <view class="shoping">
            <view class="shoptext">
                <view class="st">{{goodinfo.mall_name}}</view>
                <view class="right"></view>
            </view>
            <view class="bottom" wx:if="{{false}}">
                <view class="pro_desc">商品描述 :
          <text>{{goodinfo.avg_desc}}</text>
                </view>
                <view class="pro_desc">物流服务 :
          <text>{{goodinfo.avg_lgst}}</text>
                </view>
                <view class="pro_desc">卖家服务 :
          <text>{{goodinfo.avg_serv}}</text>
                </view>
            </view>
        </view>
        <view class="line"></view>
        <view class="pro-dex">
            <image class="banner" mode="widthFix" src="{{item}}" wx:for="{{goodinfo.goods_gallery_urls}}" wx:key="mov"></image>
        </view>
    </view>
</view>
<view class="good-btn" hidden="{{p_hide}}">
    <view class="good-bar">
        <navigator openType="switchTab" url="/pages/index/index">
            <image src="http://oss-server.litemob.net/LiteMob_B514017458141861.jpg"></image>
            <text>首页</text>
        </navigator>
        <button openType="share">
            <image src="http://oss-server.litemob.net/LiteMob_B514017639468138.jpg"></image>
            <text>分享</text>
        </button>
    </view>
    <view bindtap="gotopdd" class="exchange-btn">立即购买</view>
</view>
<view class="shadow-view" hidden="{{n_hide}}" wx:if="{{hide==true}}">
    <view class="dess">
        <image class="o_pic" src="../../images/order.png"></image>
        <view class="order_desc">该商品已过期！</view>
    </view>
</view>
<image bindtap="goTop" class="top" hidden="{{isshow}}" src="../../images/top.png"></image>
<everyday button01="{{aut}}" ishow="{{show_red}}" noopen="{{noopen}}"></everyday>
<view>
    <loading hidden="{{hide}}">
    加载中...
  </loading>
</view>
