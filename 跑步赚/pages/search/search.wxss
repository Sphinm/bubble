.search-content {
    width: 100%;
    padding: 30rpx;
    box-sizing: border-box;
    background: #fff;
    padding-top: 0rpx;
    padding-bottom: 0rpx;
}

.search-bar {
    display: flex;
    width: 690rpx;
    height: 72rpx;
    line-height: 72rpx;
    border-radius: 38rpx;
    background-color: #f0f0f0;
    overflow: hidden;
    box-shadow: 0rpx 0rpx 30rpx 0rpx rgba(228,228,228,0.5);
}

.shadow-views {
    width: 750rpx;
    box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(223,231,242,0.75) inset;
    overflow: hidden;
    display: table;
    padding-top: 30rpx;
    position: fixed;
    top: 0;
    z-index: 1001;
    box-sizing: border-box;
    background-color: #FFF;
}

.search-bar button {
    width: 120rpx;
    height: 100%;
    line-height: 66rpx;
    background: linear-gradient(270deg,rgba(255,58,51,1) 0%,rgba(255,121,121,1) 100%);
    color: #fff;
    font-size: 36rpx;
}

.search-bar input {
    flex: 1;
    height: 100%;
    padding-left: 30rpx;
    font-size: 36rpx;
}

.search-point .header {
    font-weight: bold;
    margin-bottom: 30rpx;
    margin-top: 30rpx;
}

.search-tishi {
    display: flex;
    flex-wrap: wrap;
}

.search-item {
    font-size: 24rpx;
    height: 48rpx;
    line-height: 48rpx;
    border-radius: 28rpx;
    background: #f0f0f0;
    padding: 0 24rpx;
    margin-right: 16rpx;
    margin-bottom: 24rpx;
    display: inline-block;
}

.search-item:nth-of-type(1),.search-item:nth-of-type(2),.search-item:nth-of-type(3) {
    color: #ff4a4a;
}

.step-content {
    margin-top: 430rpx;
}

.save_money {
    font-size: 24rpx;
    color: #999;
    margin: 4rpx auto;
    margin-bottom: 0rpx;
}

.row {
    width: 100%;
    height: 24rpx;
    background-color: #F8F8F8;
}

.first {
    width: 690rpx;
