@import "../../__wuBaseWxss__/2.wxss";

.good-tab {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
    align-items: center;
    text-align: center;
    box-shadow: 0rpx 0rpx 30rpx 0rpx #e4e4e4;
    background: #fff;
    z-index: 1001;
}

.good-tab .tab-item {
    flex: 1;
    position: relative;
    padding: 30rpx 0 20rpx;
}

.good-tab .active {
    color: #ff4a4a;
}

page {
    background-color: #f0f0f0;
}

.good-tab .active::before {
    content: '';
    width: 30rpx;
    height: 6rpx;
    border-radius: 3rpx;
    background-color: #ff4a4a;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
}

.tab-item image {
    margin-left: 12rpx;
    width: 18rpx;
    height: 18rpx;
}

.row {
    height: 2rpx;
    width: 750rpx;
    background: linear-gradient(to right,#fff,#f0f0f0);
    position: fixed;
    top: 0rpx;
}

.more {
    width: 56rpx;
    height: 26rpx;
    margin-right: 10rpx;
}

.top {
    width: 90rpx;
    height: 90rpx;
    position: fixed;
    bottom: 120rpx;
    right: 30rpx;
    box-shadow: 0px 0px 30rpx 0px #e4e4e4;
    border-radius: 50%;
}

.fan {
    width: 108rpx;
    height: 30rpx;
    line-height: 26rpx;
    border-radius: 6rpx;
    border: solid 1rpx #ff4a4a;
    font-size: 18rpx;
    color: #ff4a4a;
    padding-left: 6rpx;
    box-sizing: border-box;
    margin-right: 12rpx;
}

.quan {
    width: 108rpx;
    height: 30rpx;
    line-height: 30rpx;
    border-radius: 6rpx;
    background-color: #ff4a4a;
    font-size: 18rpx;
    color: #fff;
    padding-left: 6rpx;
    box-sizing: border-box;
}

.more_price {
    font-size: 24rpx;
    color: #999;
    padding-left: 24rpx;
    text-decoration: line-through;
    margin-bottom: 24rpx;
}